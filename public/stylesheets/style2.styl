body
  background-image: url("../images/GoldCoins1920.jpeg")
  background-repeat: repeat-y
  background-size: 100%
  display: grid;
  grid-template-areas:  ". hd sideb"  ". main ." ". hand ."
  grid-auto-columns: 20% 1fr 15%
  font-family: 'Oswald', sans-serif;

#header
  grid-area: hd
  margin-left: auto
  margin-right:auto

#imagenUser
  padding-top 5px

#hand
  grid-area: hand
  padding 0px
  border solid whitesmoke
  background-color rgba(114,107,107,0.48)
  border-radius 5px
  text-align center
  color whitesmoke

#aside
  grid-area: sideb
  border: solid rgba(34,31,21,0.59)
  border-radius: 8px
  background-color: rgba(120,120,120,0.57)
  margin-left: auto
  margin-right:auto
  text-align: center
  width 100px

#main
  grid-area: main
  border: solid rgba(34,31,21,0.59)
  border-radius: 8px
  background-color: rgba(120,120,120,0.57)
  text-align: center

.loginBox

  margin: 0 auto
  position: relative
  border:solid rgba(34,31,32,0.59)
  border-radius: 8px

  text-align: center

table tr td
  border: 1px solid cornsilk
  padding 1px

table th
  border 1px solid aliceblue
  background-color rgba(187,187,187,0.42)

table
  border-collapse: collapse
  margin-left: auto
  margin-right:auto
  margin-top: 10px
  margin-bottom 10px

.Welcome
  font-size 150%
  font-style italic
  border solid rgba(34,31,32,0.59)
  border-radius: 8px
  background-color rgba(218,199,126,0.45)
  width 70%
  margin-left auto
  margin-right auto



.text-form
  color:whitesmoke

.subtitle
  border solid gainsboro 2px
  border-radius 1%
  padding 3px

.board


.warning
  color: red

.labelTitle
  font-size 150%
  border solid rgba(34,31,32,0.59)
  border-radius: 8px
  background-color rgba(163,218,140,0.45)
  padding 1px
  padding-left 10px
  padding-right 10px


#star
  color:red

a
  color: white
  text-decoration: none


input[type=text] ,input[type=password] ,input[type=date]
  border:none
  background-color:sienna
  color: white
  border-bottom: 2px solid gold
  border-radius: 4px
  width: 90%
  padding: 10px 15px
  margin: 8px 0
  box-sizing: border-box


input[type=text]:focus ,input[type=password]:focus ,input[type=date]:focus
  border: 3px solid #555



.button, input[type=submit]
  display: inline-block
  border-radius: 4px
  background-color: #f4511e
  border: none
  color: #FFFFFF
  text-align: center
  font-size: 28px
  padding: 20px
  width: 200px
  transition: all 0.5s
  cursor: pointer
  margin: 5px

.buttonSmall
  padding 4px
  width 50px
  margin 3px
  font-size 15px
  border-radius 9px

.green
  background-color: green
.tomato
  background-color: tomato
.partidasButton
  background-color burlywood
  width 150px
  font-size 20px

.gold
  background-color: gold

.button a, input[type=submit]
  cursor: pointer
  display: inline-block
  position: relative
  transition: 0.1s

input[type=submit]
  font-family: "Bellefair"
  padding: 1%

.button a:after, input[type=submit]:after
  content: '\00bb'
  position: absolute
  opacity: 0
  top: 0
  right: -20px
  transition: 0.5s


.button:hover a
  padding-right: 25px

input[type=submit]:hover
  background-color:rgba(221,182,46,0.6)


.button:hover a:after
  opacity: 1
  right: 0

